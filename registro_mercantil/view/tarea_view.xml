<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='rbs_tarea_form_view' model='ir.ui.view'>
            <field name='name'>rbs.tarea</field>
            <field name='model'>rbs.tarea</field>
            <field name='type'>form</field>
            
            <field name='arch' type="xml">
	            <form string="Tarea" create="false" edit="false" version="8.0"> 
	            	<header>
	            		<button name="crear_inscripcion_propiedad"  string="Inscripcion propiedad" type="object" attrs="{'invisible':['|',('tipo_servicio','!=','inscripcion_propiedad'),('state','!=','pendiente')]}" groups="registro_mercantil.group_registrador"/>
	            		<button name="crear_inscripcion_mercantil"  string="Inscripcion mercantil" type="object" attrs="{'invisible':['|',('tipo_servicio','!=','inscripcion_mercantil'),('state','!=','pendiente')]}" groups="registro_mercantil.group_registrador"/>
	            		<button name="crear_certificacion_propiedad"  string="Certificacion propiedad" type="object" attrs="{'invisible':['|',('tipo_servicio','!=','certificacion_propiedad'),('state','!=','pendiente')]}" groups="registro_mercantil.group_certificador"/>
                        <button name="crear_certificacion_mercantil"  string="Certificacion mercantil" type="object" attrs="{'invisible':['|',('tipo_servicio','!=','certificacion_mercantil'),('state','!=','pendiente')]}" groups="registro_mercantil.group_certificador"/>


                        <button name="firmar"  string="Firmar" type="object" attrs="{'invisible':[('state','!=','por_firmar')]}"/>
	            		<button name="entregar"  string="Entregar" type="object" attrs="{'invisible':[('state','!=','por_entregar')]}"/>
	            		<field name="state" widget="statusbar" />



                	</header>
                    <sheet string="Tarea"> 
						<group>

    		         		<field name="fecha_registro"/>
    		         		<field name="user_id"/>
    		         		<field name="tipo_servicio"/>
    		         		<field name="numero_tarea"/>
    		         		<field name="factura_id"/>
    		         		<field name="cliente_factura_id"/>

    		         		<field name="propiedad_id" attrs="{'invisible':[('tipo_servicio','!=','inscripcion_propiedad')]}"/>
    		         		<field name="mercantil_id" attrs="{'invisible':[('tipo_servicio','!=','inscripcion_mercantil')]}"/>
    		         		<field name="certificado_propiedad_id" attrs="{'invisible':[('tipo_servicio','!=','certificacion_propiedad')]}"/>
    		         		<field name="certificado_mercantil_id" attrs="{'invisible':[('tipo_servicio','!=','certificacion_mercantil')]}"/>

    		         		
    		         	</group>
                    </sheet>
                    
	           	</form>
            </field>
        </record>
        <record id='rbs_tarea_tree_view' model='ir.ui.view'>
            <field name='name'>rbs.tarea.tree</field>
            <field name='model'>rbs.tarea</field>
            <field name='type'>tree</field>
            <field name='arch' type="xml">
                <tree string="Tareas" create="false" version="8.0"> 
					<field name="fecha_registro"/>
					<field name="user_id"/>
					<field name="tipo_servicio"/>
					<field name="numero_tarea"/>
					<field name="factura_id"/>
					<field name="cliente_factura_id"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window"   id="id_accion_rbs_tarea">
        	<field name="name">Tarea</field>
        	<field name="type">ir.actions.act_window</field>
        	<field name="res_model">rbs.tarea</field>
        	<field name="view_type">form</field>
        	<field name="view_mode">tree,form</field>
        	<field name="view_id" ref="rbs_tarea_tree_view"/>
        </record>

		<menuitem id="submenu_tareas" name="Tareas" parent="menu_Documentos"/>
		<menuitem id="submenu_lista_tareas" name="Lista de Tareas" parent="submenu_tareas" action="id_accion_rbs_tarea"/>

    </data>
</openerp>
