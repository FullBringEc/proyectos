<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_certificado_export_1" model="ir.ui.view">
            <field name="name">rbs.certificado.mercantil.wizard.view</field>
            <field name="model">rbs.certificado.mercantil</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Certificado">
                    <header>
                         <button name="validate"  states ="draft" string="Validar" type="object" icon="fa-check-square-o"/>
                         <button name="invalidate"  states ="done" string="Volver a borrador" type="object" icon="fa-check-square-o"/>
                        <button name="word_certificado"  icon="fa-file-word-o" string="Descargar Certificado" type="object" attrs="{'invisible':[('tipo_certificado', '=', 'none')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="6">
                            <field name = "criterio_busqueda"/>
                            <field name = "valor_busqueda"/>
                            <field name = "solicitante"/>

                        </group>
                         <group col= "6">
                            <field name = "name" states ="done"/>
                            
                            <field name = "tipo_certificado" required="1"/>
                            
                        </group>
                            <field name = "mercantil_ids" readonly="1">
                                <tree>
                                    <field name = "state"/>
                                    <field name = "numero_inscripcion"/>
                                    <field name = "vendedor_virtual"/>        
                                    <field name = "comprador_virtual"/>        
                                    <field name = "clave_catastral_virtual"/>        
                                    <field name = "descripcion_lindero_virtual"/>        
                                    <field name = "canton_virtual"/>        
                                    <button string="Certificado" name = "imprimirCertificado" type="object"/>        
                                </tree>
                            </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rbs_certificado_mercantil_search_view" model="ir.ui.view" >
            <field name="name">rbs.certificado.mercantil.search</field>
            <field name='model'>rbs.certificado.mercantil</field>
            <field name='type'>search</field>
            <field name='priority' eval="20"/>
            <field name='arch' type="xml">
                <search string="Search Detail">
                    <field name="name"/>
                    <field name="solicitante"/>
                    <field name="valor_busqueda"/> 
                    <field name="state"/>
                    <filter string="AÃ±o" domain="[ ]" context="{'group_by': 'fecha_certificado:year'}" />
                    <filter string="Mes" domain="[ ]" context="{'group_by': 'fecha_certificado:month'}" />
                    <filter string="Dia" domain="[ ]" context="{'group_by': 'fecha_certificado:day'}" />
                  

                </search>
            </field>
            
        </record>
        
        <record id="action_certificado_mercantil" model="ir.actions.act_window">
            <field name="name">Certificado</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rbs.certificado.mercantil</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="rbs_certificado_mercantil_search_view"/>
        </record>

         <record id='rbs_certificado_mercantil_tree_view_certificado' model='ir.ui.view'>
            <field name='name'>rbs.certificado.mercantil.tree</field>
            <field name='model'>rbs.certificado.mercantil</field>
            <field name='type'>tree</field>
            <field name='arch' type="xml">
                <tree
                    default_order="fecha_certificado desc" 
                    string = "Certificado mercantil" 
                    decoration-primary="state !='done'"
                    decoration-muted="state =='done'">

                    <field name = "state"/>
                    <field name = "fecha_certificado"/>
                    <field name = "solicitante"/>
                    <field name = "valor_busqueda"/>               
                </tree>
            </field>
        </record>
        <menuitem id="submenu_certificado_mercantil" name="Mercantil" parent="submenu_certificados" action="action_certificado_mercantil"/>
    </data>
</openerp>